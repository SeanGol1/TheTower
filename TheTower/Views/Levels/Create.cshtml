    $(document).ready(function () {
        $("#txtMonRoll").focusout(function () {
            var CRroll = $("#txtMonRoll").val();
            $("#divMonsterDetails").load("/Levels/GetMonQTYinput",
                { cr: CRroll });
        });
    });
    */
</script>
