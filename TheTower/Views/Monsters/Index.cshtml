@model IEnumerable<TheTower.Models.Monster>

@{
    ViewData["Title"] = "Index";
}
    
        <h3>Monster List</h3>
    
<div class="row">
    <div class="col-xs-4">
        <p>
            <a class="btn btn-success" asp-action="Create">Create New</a>
        </p>
    </div>
    <div class="col-xs-4">
        <label for="CRFilter">Filter Monsters:</label>
            <select class="form-control" style="width: 200px;" name="CRFilter" id="selCRFilter">
                <option value="0">All</option>
                @for (int i = 1; i < 31; i++)
                {
                    <option value="@i">@i</option>
                }

            </select>
        
    </div>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ChallengeRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Source)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RollNumber)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChallengeRating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Source)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RollNumber)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
