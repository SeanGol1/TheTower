@model IEnumerable<Level>

@{
    ViewData["Title"] = "Details";

    bool mon = false;
}

<h2>Details</h2>

<div>
    <h4>Session</h4>
    <hr />

    <h4></h4>


    <div class="col-md-6">
        @for (int i = 1; i < 21; i++)
        {
            mon = false;
            <div class="row">
                <div class="form-group">
                    <label for="txt@(i)" class="col-xs-3 col-form-label">Room @i</label>
                    <div class="col-xs-9 ">

                        @foreach (Level l in Model)
                        {
                            if (l.RoomLevel == i)
                            {
                                <input type="text" id="txt@(i)" class="form-control" value="@l.Name">
                                mon = true;
                            }
                        }
                        @if (mon == false)
                        {
                            <input type="text" id="txt@(i)" class="form-control">
                        }

                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-md-6">
        @for (int i = -20; i < 0; i++)
        {
            <div class="row">
                <div class="form-group">
                    <label for="txt@(i)" class="col-xs-3 col-form-label">Room @i</label>
                    <div class="col-xs-9">
                        <input type="text" id="txt@(i)" class="form-control">
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
