@model IEnumerable<TheTower.Models.CRRoll>


@foreach (var item in Model)
{
    for (int i = 1; i < item.MonsterQTY; i++)
    {
        <div id="divEachMonster">
            <h4>Roll for Monster(d4)</h4>
            <div class="row">
                <!--asp-for="MonsterID"-->
                <input id="txtMonsterRoll" type="text" />
                <button type="button" id="btnMonsterGen@(i)" class="btn btn-info">Gen</button>
                <button type="button" class="btn btn-info">View Stats</button>
                <button type="button" class="btn btn-info">View Image</button>
            </div>
            <div id="divMonsterDetails@(i)"></div>
        </div>
    }
}
